@model MSUi.Models.Authentification.Register

@{
    Layout = null;
    ViewData["Title"] = "Inscription";
}
@* <h1>@ViewData["Title"]</h1>
 *@

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
    <title>Inscription</title>
</head>
<body>

    <form asp-action="Register" method="post">
        <div class="container">
            <div class="form-group">
                <label>Email *</label>
                <input type="text" class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>

            </div>

            <div class="form-group">
                <label>Username *</label>
                <input type="text" class="form-control" asp-for="UserName" />
                <span class="text-danger" asp-validation-for="UserName"></span>

            </div>

            <div class="form-group">
                <label>Password *</label>
                <input type="password" class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>

            </div>

            <div class="form-group">
                <label>Password confirm *</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm" />
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

            </div>

            <div class="form-group">
                <label>Role *</label>
                <input type="text" class="form-control" asp-for="Role" />
                <span class="text-danger" asp-validation-for="Role"></span>

            </div>


            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    <span class="text-info">@TempData["msg"]</span>
                </div>
            }

            <button type="submit" class="btn btn-info">valider l'inscription</button>
            <a class="btn btn-primary" href="/Authentication/Login">Connexion</a>
    </form>

    <script src="~/js/authentication.js"></script>
</body>
</html>

